// Approach: https://www.youtube.com/watch?v=Z0R2u6gd3GU

func rotate(matrix [][]int)  {
    transposeMatrix(&matrix)
    n:= len(matrix)
    for i := 0; i < n; i++ {
        reverseMatrixRowInPlace(&matrix,i)
    }
    return
}


func transposeMatrix(matrix *[][]int) {
    m := *matrix
    n := len(m)
    for i := 0; i < n; i++ {
        for j := i + 1; j < n; j++ {
            m[i][j], m[j][i] = m[j][i], m[i][j]
        }
    }


}

func reverseMatrixRowInPlace(matrix *[][]int,index int) {
    m:=*matrix
    row:=m[index]
    i,j:= 0,len(row)-1
    for i<=j{
        row[i],row[j]=row[j],row[i]
        i++
        j--
    }
}
