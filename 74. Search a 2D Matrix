// Approach: https://www.youtube.com/watch?v=JXU4Akft7yk
func searchMatrix(matrix [][]int, target int) bool {
    m := len(matrix[0])
    n:= len(matrix)

    low:=0
    high:=(m*n)-1

    for low<= high{
        mid:=(low+high) /2
        row:=mid/m
        col:=mid%m

        if matrix[row][col]==target{
            return true
        } else if matrix[row][col]< target{
            low=mid+1
        } else{
            high=mid-1
        }
    }
    return false
}
