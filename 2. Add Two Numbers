/**
 * Definition for singly-linked list.
 * type ListNode struct {
 *     Val int
 *     Next *ListNode
 * }
 */
func addTwoNumbers(l1 *ListNode, l2 *ListNode) *ListNode {

	var resultHead *ListNode = &ListNode{}
	finalResult := resultHead
	carry := 0
	for true {
		if l1 != nil && l2 != nil {
			currVal := l1.Val + l2.Val + carry
			val := currVal % 10
			carry = currVal / 10
			temp := &ListNode{
				Val: val,
			}
			resultHead.Next = temp
			l1 = l1.Next
			l2 = l2.Next
			resultHead = resultHead.Next
		} else if l1 != nil {
			currVal := l1.Val + carry
			val := currVal % 10
			carry = currVal / 10
			temp := &ListNode{
				Val: val,
			}
			resultHead.Next = temp
			l1 = l1.Next
			resultHead = resultHead.Next

		} else if l2 != nil {
			currVal := l2.Val + carry
			val := currVal % 10
			carry = currVal / 10
			temp := &ListNode{
				Val: val,
			}
			resultHead.Next = temp
			l2 = l2.Next
			resultHead = resultHead.Next

		} else {
			currVal := carry
			val := currVal % 10
			carry = currVal / 10
			if currVal != 0 {
				temp := &ListNode{
					Val: val,
				}
				resultHead.Next = temp
			}
			break
		}
	}
	return finalResult.Next
}
